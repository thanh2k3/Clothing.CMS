@model OrderViewModel

<script>
    var selectProducts = @Html.Raw(Json.Serialize(ViewBag.OrderProducts ?? new List<EditOrderViewModel>()))
</script>

<div class="modal-header bg-info align-items-center">
    <i class="fa-solid fa-eye"></i>
    <h5 class="modal-title ms-2">Xem đơn hàng "@Model.Code"</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="formViewOrder" role="form" class="form-horizontal">
    <input asp-for="Id" hidden />
    <input asp-for="CreatedBy" hidden />
    <input asp-for="CreatedTime" hidden />


    <div class="card-body">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="orderViewTab" data-bs-toggle="tab" data-bs-target="#OrderViewTab" type="button" role="tab" aria-controls="orderview" aria-selected="true">Đơn hàng</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="orderViewProductTab" data-bs-toggle="tab" data-bs-target="#OrderViewProductTab" type="button" role="tab" aria-controls="orderviewproduct" aria-selected="false">Sản phẩm</button>
            </li>
        </ul>
        <div class="tab-content pt-4" id="myTabContent">
            <div class="tab-pane fade show active" id="OrderViewTab" role="tabpanel" aria-labelledby="orderViewTab">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Code" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Code)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Code" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Total" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Total)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Total" type="text" class="form-control input-amount" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Address" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Address)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Address" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="StatusString" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.StatusString)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="StatusString" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="UserEmail" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.UserEmail)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="UserEmail" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="OrderViewProductTab" role="tabpanel" aria-labelledby="orderViewProductTab">
                <section class="section">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="orderViewProductTable" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Hình ảnh</th>
                                                    <th>Tên Sản phẩm</th>
                                                    <th>Giá bán</th>
                                                    <th>Số lượng</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</form>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
</div>

<script src="~/view-resources/views/order/_viewmodal.js" asp-append-version="true"></script>