@model CreateOrderViewModel

<div class="modal fade" id="OrderCreateModal" tabindex="-1" role="dialog" aria-labelledby="OrderCreateModalLabel" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success align-items-center text-white">
                <i class="fa fa-plus-square"></i>
                <h5 class="modal-title ms-2">Thêm mới đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formCreateOrder" role="form" class="form-horizontal">
                <input asp-for="Quantity" hidden />
                <div class="card-body overflow-auto py-2">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#OrderCreateTab">Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#OrderProductTab">Sản phẩm</a>
                        </li>
                    </ul>
                </div>

                <!-- Tab panes -->
                <div class="tab-content modal-body">
                    <div id="OrderCreateTab" class="container tab-pane active">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label asp-for="Code" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                        @Html.DisplayNameFor(model => model.Code)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input asp-for="Code" type="text" class="form-control" required placeholder="Nhập mã đơn hàng..." autocomplete="off" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label asp-for="Address" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                        @Html.DisplayNameFor(model => model.Address)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input asp-for="Address" type="text" class="form-control" required placeholder="Nhập địa chỉ..." autocomplete="off" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label asp-for="Total" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                        @Html.DisplayNameFor(model => model.Total)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input asp-for="Total" type="text" class="form-control input-amount" value="0" disabled />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label asp-for="OrderStatus" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                        @Html.DisplayNameFor(model => model.OrderStatus)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <select asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatus>()" class="form-select form-control" required>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row mb-0 required">
                                    <label asp-for="UserId" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                        @Html.DisplayNameFor(model => model.UserId)
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <select asp-for="UserId" asp-items="ViewBag.UserItems" class="form-select form-control" required>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="OrderProductTab" class="container tab-pane">
                        <section class="section">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table id="orderProductTable" class="table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Hình ảnh</th>
                                                            <th>Tên Sản phẩm</th>
                                                            <th>Giá bán</th>
                                                            <th>Số lượng</th>
                                                            <th>Chọn</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-success create-order">Tạo</button>
            </div>
        </div>
    </div>
</div>

<script src="~/view-resources/views/order/_productmodal.js" asp-append-version="true"></script>
<script src="~/view-resources/views/order/_createmodal.js" asp-append-version="true"></script>