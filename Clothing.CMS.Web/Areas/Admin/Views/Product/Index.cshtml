@{
    ViewData["Title"] = "Sản phẩm";
}

@section scripts {
    @* <script src="~/view-resources/views/category/index.js" asp-append-version="true"></script> *@
    <script src="~/view-resources/views/product/index.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="d-flex flex-row-reverse">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#ProductCreateModal">
                        <i class="fa fa-plus-square"></i>
                        Thêm mới
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="productTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Loại</th>
                                    <th>Mô tả</th>
                                    <th>Giá gốc</th>
                                    <th>Giá bán</th>
                                    <th>Tồn kho</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Areas/Admin/Views/Product/_CreateModal.cshtml")

