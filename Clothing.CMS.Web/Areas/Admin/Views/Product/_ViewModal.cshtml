@model ProductViewModel

<div class="modal-header bg-info align-items-center">
    <i class="fa-solid fa-eye"></i>
    <h5 class="modal-title ms-2">Xem sản phẩm "@Model.Name"</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="formViewProduct" class="form-horizontal" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class="col-md-4">
                <img src="@Model.ImageURL" class="img-responsive img-thumbnail" id="targetImage" style="width: 100%; max-height: 500px;" />
            </div>
            <div class="col-md-8">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Name" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Name)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Name" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="StatusString" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.StatusString)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="StatusString" type="text" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="OriginalPrice" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.OriginalPrice)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="OriginalPrice" type="text" class="form-control input-amount" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Price" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Price)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Price" type="text" class="form-control input-amount" disabled />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Inventory" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Inventory)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Inventory" type="text" class="form-control input-amount" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row mb-0 required">
                            <label asp-for="CategoryTitle" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.CategoryTitle)
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="CategoryTitle" type="text" class="form-control" disabled />

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group row mb-0 required">
                            <label asp-for="Description" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
                                @Html.DisplayNameFor(model => model.Description)
                            </label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" rows="3" class="form-control" disabled></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
</div>
