<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dashboard - NiceAdmin Bootstrap Template</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/admin/img/favicon.png" rel="icon">
    <link href="~/admin/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Lib CSS Files -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- Template Main CSS File -->
    <link href="~/admin/css/style.css" rel="stylesheet" asp-append-version="true">

    <!-- Custom CSS File -->
    <link href="~/admin/css/custom.css" rel="stylesheet" asp-append-version="true"/>
</head>

<body>

    <!-- ======= Header ======= -->
    @await Component.InvokeAsync(typeof(Clothing.CMS.Web.Areas.Admin.ViewComponents.HeaderViewComponent))<!-- End Header -->

    <!-- ======= Sidebar ======= -->
    @await Component.InvokeAsync(typeof(Clothing.CMS.Web.Areas.Admin.ViewComponents.SidebarViewComponent))<!-- End Sidebar-->

    <!-- ======= Main ======= -->
    <main id="main" class="main">

        @RenderBody()

    </main><!-- End #main -->

    <!-- ======= Footer ======= -->
    @await Component.InvokeAsync(typeof(Clothing.CMS.Web.Areas.Admin.ViewComponents.FooterViewComponent))<!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- lib JS Files -->
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    <!-- Template Main JS File -->
    <script src="~/admin/js/main.js" asp-append-version="true"></script>

    <!-- Custom JS File -->
    <script src="~/admin/js/custom.js" asp-append-version="true"></script>

</body>

</html>