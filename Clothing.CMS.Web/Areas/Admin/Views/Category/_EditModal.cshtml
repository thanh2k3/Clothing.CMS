@using Clothing.Shared
@model EditCategoryViewModel

<div class="modal-header bg-warning align-items-center">
    <i class="fas fa-pencil-alt"></i>
    <h5 class="modal-title ms-2">Chỉnh sửa danh mục</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="formEditCategory" role="form" class="form-horizontal">
        <div class="form-group row required mb-3">
            <input asp-for="Id" hidden />
            <input asp-for="CreatedBy" hidden />
            <input asp-for="CreatedTime" hidden />
        </div>
        <div class="form-group row required mb-3">
            <label class="col-md-3 col-form-label">
                @Html.DisplayNameFor(model => model.Title)
                <span class="text-danger">*</span>
            </label>
            <div class="col-md-9">
                <input asp-for="Title" class="form-control" required minlength="2">
            </div>
        </div>
        <div class="form-group row required mb-3">
            <label class="col-md-3 col-form-label">
                @Html.DisplayNameFor(model => model.Status)
                <span class="text-danger">*</span>
            </label>
            <div class="col-md-9">
                <select asp-for="Status" asp-items="@Html.GetEnumSelectList<StatusActivity>()" class="form-select form-control" required>
                </select>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    <button type="submit" class="btn btn-success save-category">Lưu</button>
</div>

<script src="~/view-resources/views/category/_editmodal.js" asp-append-version="true"></script>