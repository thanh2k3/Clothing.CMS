@model CreateCategoryViewModel

<div class="modal fade" id="CategoryCreateModal" tabindex="-1" role="dialog" aria-labelledby="CategoryCreateModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header bg-success align-items-center text-white">
				<i class="fa fa-plus-square"></i>
				<h5 class="modal-title ms-2">Thêm mới danh mục</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="formCreateCategory" role="form" class="form-horizontal">
					<div class="form-group row required mb-3">
						<label class="col-md-3 col-form-label">
							@Html.DisplayNameFor(model => model.Title)
							<span class="text-danger">*</span>
						</label>
						<div class="col-md-9">
							<input asp-for="Title" class="form-control" required minlength="2">
						</div>
					</div>
					<div class="form-group row required mb-3">
						<label class="col-md-3 col-form-label">
							@Html.DisplayNameFor(model => model.Status)
							<span class="text-danger">*</span>
						</label>
						<div class="col-md-9">
							<select asp-for="Status" asp-items="@Html.GetEnumSelectList<StatusActivity>()" class="form-select form-control" required>
							</select>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
				<button type="submit" class="btn btn-success create-category">Tạo</button>
			</div>
		</div>
	</div>
</div>

<script src="~/view-resources/views/category/_createmodal.js" asp-append-version="true"></script>