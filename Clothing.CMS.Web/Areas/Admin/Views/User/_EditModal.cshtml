@model EditUserViewModel

<div class="modal-header bg-warning align-items-center text-white">
	<i class="fa fa-plus-square"></i>
	<h5 class="modal-title ms-2">Chỉnh sửa người dùng</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	<form id="formEditUser" role="form" class="form-horizontal">
		<input asp-for="Id" hidden />
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="Email" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
						@Html.DisplayNameFor(model => model.Email)
					</label>
					<div class="col-sm-8">
						<input asp-for="Email" type="text" class="form-control" placeholder="Nhập Email..." autocomplete="off" />
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="AvatarURL" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
						@Html.DisplayNameFor(model => model.AvatarURL)
					</label>
					<div class="col-sm-8">
						<input asp-for="AvatarURL" type="file" class="form-control" />
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-3">
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="FirstName" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
						@Html.DisplayNameFor(model => model.FirstName)
					</label>
					<div class="col-sm-8">
						<input asp-for="FirstName" type="text" class="form-control" placeholder="Nhập tên..." autocomplete="off" />
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group row mb-0 required">
					<label asp-for="LastName" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
						@Html.DisplayNameFor(model => model.LastName)
					</label>
					<div class="col-sm-8">
						<input asp-for="LastName" type="text" class="form-control" placeholder="Nhập họ..." autocomplete="off" />
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
	<button type="submit" class="btn btn-success save-button">Lưu</button>
</div>

<script src="~/view-resources/views/user/_editmodal.js" asp-append-version="true"></script>