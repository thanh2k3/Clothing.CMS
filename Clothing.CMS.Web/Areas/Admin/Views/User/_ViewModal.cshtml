@model EditUserViewModel

<div class="modal-header bg-info align-items-center">
	<i class="fa-solid fa-eye"></i>
	<h5 class="modal-title ms-2">Xem người dùng "@Model.Email"</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	<form id="formViewUser" class="form-horizontal">
		<div class="row mb-3">
			<div class="col-md-4">
				<img src="@Model.AvatarURL" class="img-responsive img-thumbnail" id="targetImage" style="width: 100%; max-height: 500px;" />
			</div>
			<div class="col-md-8">
				<div class="row mb-3">
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="Email" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
								@Html.DisplayNameFor(model => model.Email)
							</label>
							<div class="col-sm-8">
								<input asp-for="Email" type="text" class="form-control" disabled />
							</div>
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="FirstName" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
								@Html.DisplayNameFor(model => model.FirstName)
							</label>
							<div class="col-sm-8">
								<input asp-for="FirstName" type="text" class="form-control" disabled />
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group row mb-0 required">
							<label asp-for="LastName" class="col-md col-form-label font-weight-normal control-label text-end custom-label">
								@Html.DisplayNameFor(model => model.LastName)
							</label>
							<div class="col-sm-8">
								<input asp-for="LastName" type="text" class="form-control" disabled />
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
</div>