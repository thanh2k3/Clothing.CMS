@using Clothing.CMS.Application.Common.Dto
@using Clothing.CMS.Application.Users.Dto
@model PagedResponseDto<List<UserDto>>

@{
    ViewData["Title"] = "Người dùng";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="d-flex flex-row-reverse">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#basicModal">
                        <i class="fa fa-plus-square"></i>
                        Thêm mới
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    @* <div class="row">
                        <div class="col-md-10">
                            <h5 class="card-title">Bordered Table</h5>
                        </div>
                        <div class="col-md-2">
                            <div class="card-search d-flex justify-content-end">
                                <div class="search-bar">
                                    <form class="search-form d-flex align-items-center" method="POST" action="#">
                                        <input type="text" name="query" placeholder="Tìm kiếm" title="Enter search keyword">
                                        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                                    </form>
                                </div><!-- End Search Bar -->
                            </div>
                        </div>
                    </div> *@

                    <div class="table-responsive">
                        <!-- Bordered Table -->
                        <table id="userTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="8" class="text-center">
                                            Không có dữ liệu
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var obj in Model.Items)
                                    {
                                        <tr>
                                            <th scope="row">@obj.Id</th>
                                            <td>@obj.FirstName</td>
                                            <td>@obj.LastName</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" data-bs-toggle="" data-bs-target="">
                                                    <i class="fa-solid fa-eye"></i>
                                                    Xem
                                                </button>
                                                <button class="btn btn-sm btn-warning" data-bs-toggle="" data-bs-target="">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Sửa
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- End Bordered Table -->
                </div>
            </div>

        </div>
    </div>
</section>

@* @await Html.PartialAsync("~/Areas/Admin/Views/User/_CreateModal.cshtml") *@


<script>
    $(document).ready(function () {
        InitDataTable('#userTable');
    });
</script>