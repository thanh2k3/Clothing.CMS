@{
    ViewData["Title"] = "Nhật ký hệ thống";
}

@section scripts {
    <script src="~/view-resources/views/logevent/index.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <div class="d-flex flex-row-reverse">
                    <button class="btn btn-danger delete-logEvent" data-bs-toggle="" data-bs-target="">
                        <i class="fa-solid fa-trash-can"></i>
                        Xóa nhật ký
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="logEventTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Loại nhật ký</th>
                                    <th>Nội dung nhật ký</th>
                                    <th>Chi tiết</th>
                                    <th>Thời gian tạo</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
