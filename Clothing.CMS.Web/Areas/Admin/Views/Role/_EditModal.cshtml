@model EditRoleViewModel

<div class="modal-header bg-warning align-items-center">
    <i class="fas fa-pencil-alt"></i>
    <h5 class="modal-title ms-2">Chỉnh sửa quyền "@Model.Name"</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="formCreateRole" role="form" class="form-horizontal">
        <input asp-for="Id" hidden />
        <input asp-for="CreatedBy" hidden />
        <input asp-for="CreatedTime" hidden />
        <div class="form-group row required mb-3">
            <label asp-for="Name" class="col-md-2 col-form-label font-weight-normal control-label custom-label">
                @Html.DisplayNameFor(model => model.Name)
                <span class="text-danger">*</span>
            </label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" placeholder="Nhập tên quyền..." required autocomplete="off" />
            </div>
        </div>
        <div class="form-group row required mb-3">
            <label asp-for="Description" class="col-md-2 col-form-label font-weight-normal control-label custom-label">
                @Html.DisplayNameFor(model => model.Description)
            </label>
            <div class="col-md-10">
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Nhập mô tả của quyền..."></textarea>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    <button type="submit" class="btn btn-success save-role">Lưu</button>
</div>

<script src="~/view-resources/views/role/_editmodal.js" asp-append-version="true"></script>