@model LoginViewModel

@{
	ViewData["Title"] = "Log in";
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">

	<title>Đăng nhập - Wreckecr Admin</title>
	<meta content="" name="description">
	<meta content="" name="keywords">

	<!-- Favicons -->
	<link href="~/admin/img/favicon.png" rel="icon">
	<link href="~/admin/img/apple-touch-icon.png" rel="apple-touch-icon">

	<!-- Google Fonts -->
	<link href="https://fonts.gstatic.com" rel="preconnect">
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

	<!-- Lib CSS Files -->
	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" asp-append-version="true" />
	<link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" asp-append-version="true" />

	<!-- Template Main CSS File -->
	<link href="~/admin/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/admin/css/login.css" rel="stylesheet" />
</head>

<body>

	<main>
		<div class="container">

			<section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

							<div class="d-flex justify-content-center py-4">
								<a href="index.html" class="logo d-flex align-items-center w-auto">
									<img src="~/admin/img/logo.png" alt="">
									<span class="d-none d-lg-block">Wrekecr Admin</span>
								</a>
							</div><!-- End Logo -->

							<div class="card mb-3">

								<div class="card-body">

									<div class="pt-4 pb-2">
										<h5 class="card-title text-center pb-0 fs-4">Đăng nhập</h5>
									</div>

									<form id="loginForm" class="row g-3 needs-validation">
										@Html.AntiForgeryToken()
										<div class="col-12" style="height: 80px;">
											<label asp-for="Email" class="form-label">Email</label>
											<input asp-for="Email" type="email" class="form-control" required>
										</div>

										<div class="col-12" style="height: 80px;">
											<label asp-for="Password" class="form-label">Mật khẩu</label>
											<div class="position-relative">
												<input asp-for="Password" type="password" class="form-control pe-5" required>
												<span class="position-absolute top-50 end-0 translate-middle-y me-3 cursor-pointer toggle-password">
													<i class="bi bi-eye-slash" id="eyeIcon" style="font-size: 1.2rem;"></i>
												</span>
											</div>
										</div>

										<div class="col-12">
											<div class="form-check">
												<input asp-for="RememberMe" type="checkbox" class="form-check-input">
												<label class="form-check-label" asp-for="RememberMe">
													@Html.DisplayNameFor(m => m.RememberMe)
												</label>
											</div>
										</div>

										<div class="col-12">
											<button type="submit" class="btn btn-primary w-100 login-admin">Đăng nhập</button>
										</div>

										<div class="col-12">
											<p class="small mb-0">Bạn chưa có tài khoản? <a href="#">Tạo tài khoản</a></p>
										</div>
									</form>

								</div>
							</div>

							<div class="credits">
								Bản quyền của <a href="#">Wreckecr Studio</a>
							</div>

						</div>
					</div>
				</div>

			</section>

		</div>
	</main><!-- End #main -->

	<!-- Lib JS Files -->
	<script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-validation/jquery.validate.min.js" asp-append-version="true"></script>
	<script src="~/lib/toastr.js/toastr.min.js" asp-append-version="true"></script>

	<!-- Template Main JS File -->
	<script src="~/admin/js/main.js" asp-append-version="true"></script>

	<!-- Custom JS File -->
	<script src="~/view-resources/views/admin/login/index.js" asp-append-version="true"></script>

	<script>
		$(document).on("click", ".toggle-password", function () {
			const passwordInput = $("#Password");
			const icon = $("#eyeIcon");

			const type = passwordInput.attr("type") === "password" ? "text" : "password";
			passwordInput.attr("type", type);

			// Đổi icon
			icon.toggleClass("bi-eye");
			icon.toggleClass("bi-eye-slash");
		});
	</script>
</body>

</html>
