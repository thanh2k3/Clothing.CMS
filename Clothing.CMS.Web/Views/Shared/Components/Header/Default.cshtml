@model IEnumerable<HeaderMenu>

@{
    var currentPath = Context.Request.Path.Value.Split("/")[1]; // Lấy phần đầu tiên của URL sau domain
    var menuItem = Model.FirstOrDefault(m => m.URLPath.Split("/")[1] == currentPath);
    var headerClass = menuItem?.HeaderClass ?? "";
    var wrapClass = menuItem?.WrapClass ?? "";
}

<header class="@headerClass">
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Miễn phí vận chuyển cho đơn hàng trên 300.000₫
                </div>

                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        Giúp đỡ & câu hỏi
                    </a>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        Tài khoản của tôi
                    </a>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        VN
                    </a>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        VND
                    </a>
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop @wrapClass">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a href="#" class="logo">
                    <img src="~/cozastore-master/images/icons/logo-01.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">

                    <ul class="main-menu">
                        @foreach (var menu in Model)
                        {
                            if (menu.IsActive == true)
                            {
                                <li>
                                    <a id="@menu.IdName" href="@menu.URLPath">@menu.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>

                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart icon-cart-shopping">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </div>

                    <a href="#" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
                        <i class="fa-solid fa-user"></i>
                    </a>
                </div>
            </nav>
        </div>

    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="index.html"><img src="~/cozastore-master/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m">
            <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>

            <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="2">
                <i class="fa-solid fa-cart-shopping"></i>
            </div>

            <a href="#" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0">
                <i class="fa-regular fa-heart"></i>
            </a>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box btn-menu-bar icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti">
                <i class="fa-solid fa-bars"></i>
            </span>
        </div>
    </div>

    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="main-menu-m">
            @foreach (var menu in Model)
            {
                <li>
                    <a id="@menu.IdName" href="@menu.URLPath">@menu.Name</a>
                </li>
            }
		</ul>
	</div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="~/cozastore-master/images/icons/icon-close2.png" alt="CLOSE">
            </button>

            <form class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search...">
            </form>
        </div>
    </div>
</header>